<% provide :title, t(".title") %>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header ">
        <h4 class="card-title">
          <%= t ".users" %>
          <%= link_to t(".new_user"), new_admin_user_path, class: "btn btn-primary btn-xs right" %>
        </h4>
      </div>
      <div class="card-body ">
        <%= render "search_form" %>
        <table class="table table-hover table-striped">
          <thead>
            <th>#</th>
            <th><%= t ".email" %></th>
            <th><%= t ".fullname" %></th>
            <th><%= t ".activated" %></th>
            <th><%= t ".role" %></th>
            <th><%= t ".money" %></th>
            <th><%= t ".time" %></th>
            <th><%= t ".action" %></th>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
