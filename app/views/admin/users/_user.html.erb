<tr>
  <td><%= count_index_list user_counter %></td>
  <td><%= user.email %></td>
  <td><%= user.fullname %></td>
  <td>
    <%= user.confirmed? %>
    <% unless user.confirmed? %>
      <%= link_to confirm_user_admin_user_path(user),
        data: {method: :patch}, title: t(".confirm") do %>
        <i class="fa fa-share"></i>
      <% end %>
    <% end %>
  </td>
  <td><%= user.role.titleize %></td>
  <td><%= number_to_currency(user.money) %></td>
  <td><%= format_time user.created_at %></td>
  <td class="td-actions text-right">
    <%= link_to edit_admin_user_path(user), class: "btn btn-success btn-link btn-xs", title: t(".edit") do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to admin_user_path(user), class: "btn btn-danger btn-link btn-xs", title: t(".remove"),
      method: :delete, data: {confirm: t(".are_you_sure")} do %>
      <i class="fa fa-times"></i>
    <% end %>
  </td>
</tr>
