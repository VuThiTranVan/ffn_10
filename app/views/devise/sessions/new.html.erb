<% provide :title, t(".title") %>
<header class="heading"><%= t ".title" %></header><hr></hr>
<div class="login-form">
  <div class="main-div">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", id: "inputEmail", placeholder: t(".email") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: t(".pass") %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="remember_me">
          <%= f.check_box :remember_me %>
          <%= f.label t(".remember_me") %>
        </div>
      <% end %>
      <div class="forgot">
        <%= link_to t(".forgot_pass"), new_user_password_path %>
      </div>
      <%= f.submit t(".login"), class: "btn btn-primary" %>
    <% end %>
  </div>
  <p>
    <%= t ".new_user" %> <%= link_to t(".signup_now"), new_user_registration_path, class: "botto-text" %>
  </p>
</div>
