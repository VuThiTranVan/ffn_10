<% provide(:title, t(".title")) %>
<header class="heading"><%= t ".title" %></header><hr></hr>
<div class="row">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="col-sm-12">
      <div class="row">
        <div class="col-xs-4">
          <%= f.label t(".email"), class: "mail" %>
        </div>
        <div class="col-xs-8">
          <%= f.email_field :email, class: "form-control", id: "email", placeholder: t(".email_place") %>
        </div>
      </div>
    </div>

    <div class="col-sm-12" id="reset_pass">
      <%= f.submit t(".submit"), class: "btn btn-warning" %>
    </div>
  <% end %>
</div>
