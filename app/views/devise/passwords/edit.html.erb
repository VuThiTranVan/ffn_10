<% provide(:title, t(".title")) %>
<header class="heading"><%= t ".title" %></header><hr></hr>
<div class="row">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="col-sm-12">
      <div class="row">
        <div class="col-xs-4">
          <%= f.label t(".pass"), class: "pass" %>
        </div>
        <div class="col-xs-8">
          <%= f.password_field :password, class: "form-control", id: "password", placeholder: t(".pass_place") %>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="row">
        <div class="col-xs-4">
          <%= f.label t(".confirm"), class: "pass" %>
        </div>
        <div class="col-xs-8">
          <%= f.password_field :password_confirmation, class: "form-control",
            id: "password", placeholder: t(".confirm_place") %>
        </div>
      </div>
    </div>

    <div class="col-sm-12" id="reset_pass">
      <%= f.submit t(".submit"), class: "btn btn-warning" %>
    </div>
  <% end %>
</div>
